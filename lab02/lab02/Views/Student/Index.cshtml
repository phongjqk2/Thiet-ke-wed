@model IEnumerable<lab02.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create Student</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Mã
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Ngày sinh
            </th>

            <th>
                Ngành
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Hệ đào tạo
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Email
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBorth)
                </td>


                @{
                    string str = "";
                    switch (item.Branch)
                    {
                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";
                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>
                    @str
                </td>
                <td>
                    @(item.Gender == Gender.Male ? "Nam" : "Nữ")
                </td>
                <td>
                    @(item.IsRegular ? "Chính quy" : "Phi chính quy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick(){
            table.style.backgroundColor = "lightgray";
        }

    </script>
}