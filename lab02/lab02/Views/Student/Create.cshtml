
@model lab02.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold">Tạo sinh viên mới</h2>

    <form asp-action="Create" asp-controller="Student" method="post" class="needs-validation" novalidate>
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập họ tên" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Branch" class="form-label fw-semibold"></label>
                    <select asp-for="Branch" asp-items="Html.GetEnumSelectList<Branch>()" class="form-select">
                        <option value="">-- Chọn ngành --</option>
                    </select>
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-semibold d-block"></label>
                    @foreach (var gender in ViewBag.AllGenders)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="@gender" id="Gender_@gender" />
                            <label class="form-check-label" for="Gender_@gender">@gender</label>
                        </div>
                    }
                    <span asp-validation-for="Gender" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="IsRegular" id="isRegularCheck" />
                    <label class="form-check-label" for="isRegularCheck">@Html.DisplayNameFor(model => model.IsRegular)</label>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-semibold"></label>
                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBorth" class="form-label fw-semibold"></label>
                    <input asp-for="DateOfBorth" class="form-control" type="date" />
                    <span asp-validation-for="DateOfBorth" class="text-danger"></span>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-4">Tạo mới</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

